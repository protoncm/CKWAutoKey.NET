<Window x:Class="CoinAutoKeyweight.NET.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoinAutoKeyweight.NET"
        xmlns:converters="clr-namespace:CoinAutoKeyweight.NET.Converters"
        mc:Ignorable="d"
        Title="Coin - Auto Keyweight" Height="250" Width="250" ResizeMode="NoResize" Closing="Window_Closing" Icon="kitty_2.ico">
    <Window.Resources>
        <local:FormDataSource x:Key="formDataSource" />
        <converters:ButtonStageConverter x:Key="buttonStageConverter"/>
        <converters:SettingButtonStageConverter x:Key="settingButtonStageConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label x:Name="txtAssignedKeyText" Grid.Row="0" Grid.Column="0" Content="Key" Margin="5"/>
        <TextBlock x:Name="txtAssignedKey" Grid.Row="0" Grid.Column="1" TextWrapping="Wrap" Text="{Binding Source={StaticResource formDataSource}, Path=Config.AssignedKey}" Margin="0,5" VerticalAlignment="Center"  Foreground="Red"/>
        <TextBlock x:Name="txtMessageText" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" TextWrapping="Wrap" Text="{Binding Source={StaticResource formDataSource}, Path=MessageText}" Margin="5" Foreground="Green" HorizontalAlignment="Center" />
        <Label x:Name="txtDelay" Grid.Row="1" Grid.Column="0" Content="Hold Time (sec)" Margin="5"/>
        <TextBox x:Name="tbHoldTime" Grid.Column="1" Grid.Row="1" Margin="5" Text="{Binding Source={StaticResource formDataSource}, Path=Config.HoldTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" KeyUp="tbHoldTime_KeyUp" />
        <Grid Grid.Row="3" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70" />
                <ColumnDefinition Width="70" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button x:Name="btnAssignKey" Content="KEY"  Grid.Column="0" Margin="5" Click="btnAssignKey_Click" Height="30" IsEnabled="{Binding Source={StaticResource formDataSource}, Path=IsRunning, Converter={StaticResource settingButtonStageConverter}}"/>
            <Button x:Name="btnAssignActiveWindow"  Grid.Column="1"  Content="Window"  Margin="5" Height="30" IsEnabled="{Binding Source={StaticResource formDataSource}, Path=IsRunning, Converter={StaticResource settingButtonStageConverter}}"/>
            <CheckBox x:Name="chkSnipping" Content="Snipping" Grid.Column="2" Grid.ColumnSpan="2" Margin="5" IsChecked="{Binding Source={StaticResource formDataSource}, Path=Config.IsSnapping, Mode=TwoWay}" Checked="chkSnipping_Checked" Unchecked="chkSnipping_Checked" VerticalAlignment="Center"/>
        </Grid>
        <Button x:Name="btnStart" Grid.ColumnSpan="2" Content="{Binding Source={StaticResource formDataSource}, Path=IsRunning, Converter={StaticResource buttonStageConverter}}" Grid.Row="4" Grid.Column="0" Margin="5" IsEnabled="{Binding Source={StaticResource formDataSource}, Path=Config.NeedInitialConfig}" Click="btnStart_Click" FontSize="20"/>
    </Grid>
</Window>
